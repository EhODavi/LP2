package Interface;

import javax.swing.JFrame;

public class Janela1 {
	// Normalmente os componentes gráficos da janela são declarados como atributos
	private JFrame frame;
	
	public Janela1() {
		initGui();
	}
	
	// Metodo que inicializará os componentes gráficos
	private void initGui() {
		// carcaça da janela com título
		frame = new JFrame("Minha primeira Janela");
		// define titulo
		// frame.setTitle("Minha primeira Janela"); Eu posso fazer isso se não tivesse definido no construtor
	}
	
	// só para teste
	public static void main(String[] args) {
		Janela1 j = new Janela1();
	}
} 
