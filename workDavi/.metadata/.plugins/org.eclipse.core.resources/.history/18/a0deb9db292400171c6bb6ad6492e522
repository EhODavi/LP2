import java.util.Scanner;
public class ExAvaliativo 
{
	public static void main(String[] args)
	{
		double numero = 1;
		int valor;
		Scanner leia = new Scanner(System.in);
		while(numero != 0)
		{
			System.out.println("Infome um numero: ");
