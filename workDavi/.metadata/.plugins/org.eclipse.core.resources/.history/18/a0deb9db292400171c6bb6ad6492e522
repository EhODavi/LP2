			valor = chao(numero);
			System.out.println("Valor: " + valor);
		}
		System.out.println("Programa finalizado!!!");
	}
	public static int chao(double numero)
	{
		int valor;
		int contador;
		
		for(contador = 0; contador < numero; contador++)
		{
			
		}
		return valor;
	}
}
